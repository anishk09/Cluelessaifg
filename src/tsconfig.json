{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",             // For React 17+ and TS v4.1+
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  // tsconfig.json lives inside `src/` so include should be the local files
  "include": ["**/*"],
  "exclude": ["node_modules", "dist"]
}
